<div class="container">
  <h1 class="text-center">Can Do!</h1>
  <div id="todo-input" class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_tag :todos, id: 'new-todo' do %>
        <div class="input-group">
          <%= text_field :todo, :name, class: 'form-control', placeholder: 'Enter a new todo item...', autocomplete: 'off' %>
          <span class="input-group-btn">
            <%= button_tag 'Create', type: 'submit', class: 'btn btn-primary' %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
  <div id="todo-lists" class="row">
    <div class="col-md-6">
      <div class="panel panel-info todo-list">
        <div class="panel-heading list-header">
          <div class="btn-group pull-right sort-buttons"></div>
          <h4 class="todo-list-title">
            <span class="count"></span>
            <span class="status"></span>
          </h4>
        </div>
        <table class="table todos"></table>
      </div>
    </div>
    <div class="col-md-6">
      <div class="panel panel-success todo-list">
        <div class="panel-heading">
          <div class="btn-group pull-right sort-buttons"></div>
          <h4 class="todo-list-title">
            <span class="count"></span>
            <span class="status"></span>
          </h4>
        </div>
        <table class="table todos"></table>
      </div>
    </div>
  </div>
</div>
